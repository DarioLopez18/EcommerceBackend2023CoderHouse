<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h3>Perfil de Usuario</h3>
        </div>
        <div class="card-body">
          <div class="container">
            <div class="d-flex flex-wrap" style="gap:20px">
              <div class="col-12"> <!-- Cambio aquí -->
                <label>First name:</label>
                <h3 class="text-center" style="color: white;">{{first_name}}</h3>
                <label>Last name:</label>
                <h3 class="text-center" style="color: white;">{{last_name}}</h3>
                <label>Age:</label>
                <h3 class="text-center" style="color: white;">{{age}}</h3>
              </div>
              <div class="col-12"> <!-- Cambio aquí -->
                <label>Email:</label>
                <h3 class="text-center" style="color: white;">{{email}}</h3>
                <label>Rol:</label>
                <h3 class="text-center" style="color: white;">{{rol}}</h3>
              </div>
            </div>
            <div class="d-flex justify-content-around align-items-center flex-wrap"> <!-- Agregado align-items-center -->
              <a href="/api/session/logout" class="btn btn-link" style="color: white; margin-bottom: 10px;">Logout</a>
              <a href="/api/users/premium/{{_id}}" class="btn btn-link" style="color:white; margin-bottom: 10px;">Change to rol</a>
              <a href="/api/users/ticket/{{_id}}" class="btn btn-link" style="color:white; margin-bottom: 10px;">My Shopping</a>
              <a href="/api/products/products" class="btn btn-link" style="color:white; margin-bottom: 10px;">Products</a>
              <a href="/api/users/uploadDocuments" class="btn btn-link" style="color:white; margin-bottom: 10px;">Upload documentation</a>
              <a href="/api/users" class="btn btn-link" style="color:white; margin-bottom: 10px;">view users</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
