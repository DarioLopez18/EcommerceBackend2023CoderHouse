<div class="containerPrincipal">
  <h1>Your Purchase Details</h1>

  <p>Please keep the ticket code
    <strong>{{code}}</strong>
    for tracking purposes.</p>
  <p><strong>Purchase Date and Time:</strong> {{purchase_datetime}}</p>
  <p><strong>Purchaser Email:</strong> {{purchaser}}</p>
  <p><strong>Purchase Status:</strong> {{purchase_status}}</p>

  <h2>Products Purchased:</h2>
  {{#each products}}
    <div class="col-md-3 p-3">
      <div
        style="border: none; border-radius: 20px; background-color: #fae9e3; margin: 1rem; height: 100%; width: 100%; box-shadow: 0 4px 8px rgba(104, 63, 1, 0.253);"
      >
        <div
          style="border: none; border-radius: 20px; background-color: #fae9e3; margin: 1rem;"
        >
          <h3
            style="font-size: 1.25rem; font-weight: 700; text-decoration: none; color: #4794e6;"
          ><a href="/api/products/{{_id}}">{{{title}}}</a></h3>
          <p
            style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: grey;"
          >{{description}}</p>
          <p style="color: #4794e6;">{{quantity}} units</p>
          <p>${{price}}</p>
        </div>
      </div>
    </div>
  {{/each}}

  <h2>Total Amount: ${{amount}}</h2>
  <p class="display-4">Thank you for your purchase! We appreciate your business.</p>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
></script>